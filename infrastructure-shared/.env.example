# AWS Configuration
# Note: AWS_ACCOUNT_ID is automatically detected from AWS credentials via 'aws sts get-caller-identity'
# Note: AWS_REGION is automatically detected from AWS CLI config or defaults to ap-southeast-2 (Sydney)
# You can override the region here if needed
AWS_REGION=ap-southeast-2

# VPC Configuration
VPC_MAX_AZS=2
VPC_NAT_GATEWAYS=1
VPC_ENABLE_FLOW_LOGS=true

# RDS Configuration
RDS_INSTANCE_CLASS=t3
RDS_INSTANCE_SIZE=micro
RDS_ALLOCATED_STORAGE=20
RDS_BACKUP_RETENTION_DAYS=7
RDS_MULTI_AZ=false
RDS_DATABASE_NAME=orderdb

# ALB Configuration
ALB_ENABLE_ACCESS_LOGS=true
ALB_DELETION_PROTECTION=false
ALB_ACCESS_LOGS_RETENTION_DAYS=90

# SQS Configuration
SQS_VISIBILITY_TIMEOUT=300
SQS_MESSAGE_RETENTION=1209600
SQS_MAX_RECEIVE_COUNT=3

# ECS Configuration
ECS_ENABLE_CONTAINER_INSIGHTS=true
ECS_LOG_RETENTION_DAYS=7

# Resource Removal Policies
REMOVAL_POLICY_RETAIN=false
REMOVAL_POLICY_DESTROY=true
REMOVAL_POLICY_SNAPSHOT=false
DELETION_PROTECTION=false
AUTO_DELETE_OBJECTS=true

# Performance Insights
# Enable Performance Insights (recommended for production only to monitor database performance)
ENABLE_PERFORMANCE_INSIGHTS=false
PERFORMANCE_INSIGHTS_LONG_TERM=false