# Staging Environment Configuration
# Note: AWS_ACCOUNT_ID is automatically detected from AWS credentials
# AWS_REGION can be overridden here if needed (default: from AWS CLI config or ap-southeast-2)
AWS_REGION=ap-southeast-2

# VPC Configuration - Production-like
VPC_MAX_AZS=2
VPC_NAT_GATEWAYS=2
VPC_ENABLE_FLOW_LOGS=true

# RDS Configuration - Medium instance for staging
RDS_INSTANCE_CLASS=t3
RDS_INSTANCE_SIZE=small
RDS_ALLOCATED_STORAGE=50
RDS_BACKUP_RETENTION_DAYS=14
RDS_MULTI_AZ=true
RDS_DATABASE_NAME=orderdb

# ALB Configuration
ALB_ENABLE_ACCESS_LOGS=true
ALB_DELETION_PROTECTION=false
ALB_ACCESS_LOGS_RETENTION_DAYS=90

# ECS Configuration
ECS_ENABLE_CONTAINER_INSIGHTS=true
ECS_LOG_RETENTION_DAYS=14

# Resource Removal Policies - Moderate protection for staging
REMOVAL_POLICY_RETAIN=false
REMOVAL_POLICY_DESTROY=false
REMOVAL_POLICY_SNAPSHOT=true
DELETION_PROTECTION=false
AUTO_DELETE_OBJECTS=false

# Performance Insights - Disabled for staging to save costs
ENABLE_PERFORMANCE_INSIGHTS=false
PERFORMANCE_INSIGHTS_LONG_TERM=false